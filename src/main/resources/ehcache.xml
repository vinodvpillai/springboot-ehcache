<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3
            http://www.ehcache.org/schema/ehcache-core-3.7.xsd">

    <!-- Persistent cache directory -->
    <persistence directory="spring-boot-ehcache/cache" />

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>com.vinod.ehcache.config.CacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>

        <!-- Ehcache Last Recently Used (LRU) - eviction strategy -->
        <resources>
            <!--1,000 cache entries -->
            <heap>1000</heap>
            <offheap unit="MB">10</offheap>
            <disk persistent="true" unit="MB">20</disk>
        </resources>
    </cache-template>

    <!-- Cache configurations -->
    <cache alias="customerByEmailId" uses-template="default">
        <key-type>java.lang.String</key-type>
        <value-type>com.vinod.ehcache.model.Customer</value-type>
    </cache>

    <cache alias="customerById" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type>com.vinod.ehcache.model.Customer</value-type>
    </cache>

</config>